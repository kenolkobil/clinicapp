<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Clinicpatientslogin"
    android:background="#FFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/cliniclogo" />


    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#da0384"
            android:drawableLeft="@drawable/ic_person_outline"
            android:ems="10"
            android:hint="Email..."
            android:inputType="textPersonName"
            android:textSize="22sp" />


        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#da0384"
            android:drawableLeft="@drawable/ic_lock_outline"
            android:ems="10"
            android:hint="Password..."
            android:inputType="textPassword"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Remember me"
            android:textColor="#da0384"
            android:buttonTint="#da0384"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custombutton"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password forgotten"
            android:gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>

</LinearLayout>